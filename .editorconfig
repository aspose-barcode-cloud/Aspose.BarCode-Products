# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.md]
indent_size = 4
indent_style = space

[*.js]
indent_size = 4
indent_style = space
end_of_line = crlf

[*.html]
indent_size = 4
indent_style = space
end_of_line = crlf

[*.bash]
indent_size = 2
indent_style = space

[*.py]
trim_trailing_whitespace = true
max_line_length = 120
